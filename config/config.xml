<menus name="Config file">
	<menu name="Configuration">
		<submenu name="Preferences">
			<struct name="Options" title="Window settings:">
				<leaf name="Maximize at start" title="Choose option:" type="charlist" selection="single">
					<element>Yes</element>
					<element selected="true">No</element>
				</leaf>
				<leaf name="Show warning on load" title="Choose option:" type="charlist" selection="single">
					<element selected="true">Yes</element>
					<element>No</element>
				</leaf>
				<leaf name="Run GUI in verbose mode" title="Choose option:" type="charlist" selection="single">
					<element>Yes</element>
					<element selected="true">No</element>
				</leaf>
				<leaf name="Default widgets panel width" title="Give width (pixels):" type="float">
					<element>240</element>
				</leaf>
				<struct name="Default window size" title="Select dimension (pixels):">
					<leaf name="Window width" title="Give width:" type="float">
						<element>900</element>
					</leaf>
					<leaf name="Window height" title="Give height:" type="float">
						<element>600</element>
					</leaf>
				</struct>
			</struct>
		</submenu>
		<submenu name="Reset">
