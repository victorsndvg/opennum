<menus name="Intermediate: visualization with menu">
	<menu name="Visualization">
		<submenu name="Open mesh">
			<leaf name="mesh" type="file" subtype="mesh">
				<element>mesh3D2.mfm</element>
			</leaf>
		</submenu>
		<submenu name="Choose field">
			<leaf name="field" type="charlist" selection="single">
				<element>Current density (A/m^2), real part</element>
				<element>Magnetic field (A/m), real part</element>
				<element selected="true">Magnetic flux density (T), real part</element>
			</leaf>
		</submenu>
		<submenu name="Plot">
			<struct name="plot">
				<struct name="Mesh" mesh="menu:/Visualization/Open mesh/mesh"  plot="mesh">
				</struct>

				<struct name="Field" mesh="file:field3D.vtu" pointdata="menu:/Visualization/Choose field/field" plot="vector_field">
				</struct>
					
				<struct name="Field with additional mesh" mesh="file:field3D.vtu" add_mesh="menu:/Visualization/Open mesh/mesh" pointdata="menu:/Visualization/Choose field/field" plot="vector_field">
				</struct>
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
	<menu name="Chart">
		<submenu name="Open chart">
			<leaf name="chart" type="file" subtype="data:All supported (*.gr2)|*.gr2|XY plot (*.gr2)|*.gr2|All Files (*)|*">
				<element>linechart2.gr2</element>
			</leaf>
		</submenu>
		<submenu name="Plot">
			<struct name="From menu" plot="2d_graph" data="menu:/Chart/Open chart/chart">
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
	<menu name="Text file">
		<submenu name="Open file">
			<leaf name="file" type="file" subtype="data:All supported (*.txt)|*.txt|ASCII (*.txt)|*.txt|All Files (*)|*">
				<element>file.txt</element>
			</leaf>
		</submenu>
		<submenu name="Show content">
			<leaf name="From menu" type="charlist" showfile="menu:/Text file/Open file/file" title="Content from menu:">
			</leaf>
		</submenu>
		<submenu name="Choose content">
			<struct name="option">
				<leaf name="Selection single" type="charlist" source="menu:/Materials database/Open/List">
				</leaf>
				<leaf name="Selection multiple" type="charlist" source="menu:/Materials database/Open/List" selection="multiple">
				</leaf>
			</struct>
		</submenu>
	</menu>
</menus>
