<menus name="Intermediate: visualization with file">
	<menu name="Visualization">
		<submenu name="Plot types">
			<struct name="Represent" title="Choose plot:">
				<struct name="Mesh" mesh="file:mesh3D.mfm"  plot="mesh">
				</struct>
				<struct name="Field"  mesh="file:field3D.vtu" plot="filled" pointdata="data:Active power density (W/m^3)">
				</struct>
				<struct name="Field with additional mesh" mesh="file:field3D.vtu" add_mesh="file:mesh3D2.mfm" plot="filled"  pointdata="data:Active power density (W/m^3)" >
				</struct>
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
	<menu name="Chart">
		<submenu name="Show chart">
			<struct name="Show line chart" data="file:linechart.gr2" plot="2d_graph">
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
	<menu name="Text file">
		<submenu name="Show content">
			<leaf name="From file" type="charlist" showfile="file:file.txt" title="File content:">
			</leaf>
		</submenu>
		<submenu name="Choose content">
			<struct name="option">
				<leaf name="Selection single" type="charlist" source="file:file.txt">
				</leaf>
				<leaf name="Selection multiple" type="charlist" source="file:file.txt" selection="multiple">
				</leaf>
			</struct>
		</submenu>
	</menu>
</menus>
