<menus name="Intermediate: tables and charts">
	<menu name="Structs">
		<submenu name="Tables and charts">
			<struct name="Tables and charts">
				<struct name="Table" show="tabular" title="Fill in the following data:">
					<leaf name="Col 1" type="float">
						<element>0</element>
						<element>1</element>
					</leaf>
					<leaf name="Col 2" type="float">
						<element>0</element>
						<element>10</element>
					</leaf>
					<leaf name="Col 3" type="float">
						<element>0</element>
						<element>100</element>
					</leaf>
					<leaf name="Col 4" type="float">
						<element>0</element>
						<element>1000</element>
					</leaf>
				</struct>
				<struct name="Line chart" show="plot" title="Fill in the following data:" tooltip="Array sizes must agree.">
					<leaf name="Abscissa" type="float">
						<element>0</element>
						<element>1</element>
					</leaf>
					<leaf name="Ordinate" type="float">
						<element>0</element>
						<element>1</element>
					</leaf>
				</struct>
				<struct name="Table and line chart" show="all" title="Fill in the following data:" tooltip="Array sizes must agree.">
					<leaf name="Abscissa" type="float">
						<element>0</element>
						<element>1</element>
						<element>2</element>
						<element>3</element>
						<element>4</element>
					</leaf>
					<leaf name="Ordinate 1" type="float">
						<element>1</element>
						<element>3</element>
						<element>2</element>
						<element>0</element>
						<element>2</element>
					</leaf>
					<leaf name="Ordinate 2" type="float">
						<element>2</element>
						<element>1</element>
						<element>1</element>
						<element>-1</element>
						<element>3</element>
					</leaf>
				</struct>
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>			
</menus>
