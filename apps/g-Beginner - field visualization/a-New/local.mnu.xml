<menus name="Beginner - field visualization">
	<menu name="2D field">
		<submenu name="Scalar field">
			<struct name="Representation">
				<struct name="Filled" plot="filled" mesh="file:scalarfield2D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Threshold" plot="threshold" mesh="file:scalarfield2D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Isolines" plot="contour" mesh="file:scalarfield2D.vtu" pointdata="data:Potential (V)">
				</struct>
				<leaf name="3D plot" plot="scalar_deformed" mesh="file:scalarfield2D.vtu" pointdata="data:Potential (V)" type="float">
				</leaf>
				<struct name="Plot over line" plot="plot_over_line" mesh="file:scalarfield2D.vtu" pointdata="data:Potential (V)">
				</struct>
			</struct>
		</submenu>
		<submenu name="Vector field">
			<struct name="Representation">
				<struct name="Vectors" plot="vector_field" mesh="file:vectorfield2D.vtu" pointdata="data:Magnetic induction (real part)">
				</struct>
				<leaf  name="Deformed mesh" plot="vector_deformed" mesh="file:vectorfield2D.vtu" pointdata="data:Magnetic induction (real part)">
				</leaf>
				<leaf name="Vector components" plot="vector_components" mesh="file:vectorfield2D.vtu" pointdata="data:Magnetic induction (real part)" type="charlist">
				</leaf>
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
	<menu name="3D field">
		<submenu name="Scalar field">
			<struct name="Representation">
				<struct name="Filled"  plot="filled" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Threshold"  plot="threshold" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Isosurfaces"  plot="contour" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Plot over line"  plot="plot_over_line" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Slice" plot="slice" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Cut" plot="cut" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
				<struct name="Rough cut" plot="rough_cut" mesh="file:scalarfield3D.vtu" pointdata="data:Potential (V)">
				</struct>
			</struct>
		</submenu>
		<submenu name="Vector field">
			<struct name="Representation">
				<struct name="Vectors" plot="vector_field" mesh="file:vectorfield3D.vtu" pointdata="data:Magnetic field (A/m), real part">
				</struct>
				<leaf  name="Deformed mesh" plot="vector_deformed" mesh="file:vectorfield3D.vtu" pointdata="data:Magnetic field (A/m), real part">
				</leaf>
				<struct name="Streamlines" plot="streamline" mesh="file:vectorfield3D.vtu" pointdata="data:Magnetic field (A/m), real part">
				</struct>
				<leaf name="Vector components" plot="vector_components" mesh="file:vectorfield3D.vtu" pointdata="data:Magnetic field (A/m), real part" selection="single" type="charlist">
				</leaf>
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
	<menu name="Chart">
		<submenu name="Line chart">
			<struct name="Representation">
				<struct name="Line chart" plot="2d_graph" data="file:linechart.gr2" >
				</struct>
			</struct>
		</submenu>
		<submenu name="Close plots">
			<action name="close_plots" />
		</submenu>
	</menu>
</menus>
